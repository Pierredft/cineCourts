{% extends 'base.html.twig' %}

{% block title %}Nouvelle vidéo{% endblock %}

{% block body %}
    {# <a href="{{ path('app_video_index') }}">Retour à la liste des vidéos</a>
    <h1>Ajouter une vidéo</h1>

    {{ include('video/_form.html.twig') }} #}

    {{ form_start(form) }}
        <div class="form-group white">
            {{ form_label(form.file, 'Vidéo (MP4)', {'label_attr': {'class': 'custom-label'}}) }}
            {{ form_widget(form.file, {'attr': {'class': 'custom-file'}}) }}
            {{ form_errors(form.file) }}
        </div>

        <div class="form-group white">
            {{ form_label(form.name, null, {'label_attr': {'class': 'custom-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'custom-name'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group white">
            {{ form_label(form.films, null, {'label_attr': {'class': 'custom-label'}}) }}
            {{ form_widget(form.films, {'attr': {'class': 'custom-films'}}) }}
            {{ form_errors(form.films) }}
        </div>

        <button type="submit" class="btn btnReg">Enregistrer</button>
    {{ form_end(form) }}

{% endblock %}
