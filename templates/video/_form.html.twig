<div class="cadre d-flex center">
{{ form_start(form) }}
    <div class="form-group white d-flex justify-content-center" style="flex-direction: column;">
            <div class="posBtn">
                {{ form_label(form.file, 'Vid√©o format (MP4)', {'label_attr': {'class': 'fs-1 text-center'}}) }}
                {{ form_widget(form.file, {'attr': {'class': 'btn btnReg2 '}}) }}
                {{ form_errors(form.file) }}
            </div>
        </div>

        <div class="form-group white d-flex justify-content-center" style="flex-direction: column;">
            <div class="posBtn">
                {{ form_label(form.name, null, {'label_attr': {'class': 'fs-1 text-center'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control inputSize'}}) }}
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group white d-flex justify-content-center" style="flex-direction: column;">
            <div class="posBtn">
                {{ form_label(form.films, null, {'label_attr': {'class': 'fs-1 text-center'}}) }}
                {{ form_widget(form.films, {'attr': {'class': 'form-select inputSize'}}) }}
                {{ form_errors(form.films, {'attr': {'class': 'floatingInputInvalid '}}) }}
            </div>
        </div>
    <button class="btn btnReg2">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
</div>