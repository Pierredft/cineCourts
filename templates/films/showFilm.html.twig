{% extends 'base.html.twig' %}

{% block title %}Films show{% endblock %}

{% block body %} 
        <div class="imgFilmShow">
            <img class="img-fluid imgSizeShow mt-3 mb-3" src="{{ asset ('/images/affiches/' ~ films.affiche)}}" alt=""></a>
        </div>
        <h1  class="text-center white">{{films.name}}</h1>
        <p class="text-center white me-5 ms-5">{{films.synopsis}}</p>
        <h4 class="text-center white">{{ films.duree|date('H') }}h {{ films.duree|date('i') }} min</h4>
        {% for genres in films.genres %}
            <h5 class="text-center white">{{genres.nom}}</h5>
        {% endfor %}

        {# !!!!!!! MODAL POUR LA DISTRIBUTION !!!!!!!! #}
        <!-- Button trigger modal -->
        <div class=" d-flex justify-content-center">
            <div class="mb-3">
                <button type="button" class="btn btnReg" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Distribution
                </button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header btnPad">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body2">
                    {% for acteurs in films.acteurs %}
                        <h6 class="me-1 text-center">{{ acteurs.prenom }} {{ acteurs.nom }}</h6>
                        {# <h6 class="">{{ acteurs.nom }},</h6> #}
                    {% endfor %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {# !!!!!!! MODAL POUR LA DISTRIBUTION !!!!!!!! #}

        {# !!!!!!! MODAL POUR LA REALISATION #}
            <!-- Button trigger modal -->
        <div class=" d-flex justify-content-center">
            <div class="mb-3">
                <button type="button" class="btn btnReg" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    RÃ©alisation
                </button>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header btnPad">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body2">
                    {% for realisateur in films.realisateur %}
                        <h6 class="me-1 text-center">{{ realisateur.prenom }} {{ realisateur.nom }}</h6>
                        {# <h6 class="">{{ acteurs.nom }},</h6> #}
                    {% endfor %}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {# !!!!!!! MODAL POUR LA REALISATION #}
            {% for video in videos %}
                <div class="d-flex justify-content-center">
                    <a class="btn btnReg" href="{{ path('app_films_view', {'id' : video.films.id}) }}">Voir le film</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btnReg" href="{{ path('app_films_index') }}">Retour au catalogue</a>
                </div>
            {% endfor %}
{% endblock %}