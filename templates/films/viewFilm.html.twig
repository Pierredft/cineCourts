{% extends 'base.html.twig' %}

{% block title %}Films index{% endblock %}

{% block body %}
    {% for videos in videos %}
        <a class="ms-2" href="{{ path('app_films_show', {'id' : videos.films.id}) }}"><i class="fa-solid fa-arrow-left colorbtn"></i></fa-regular></fa-regular></a>
        <video controls>
            <source src="{{ asset ('/uploads/videos/' ~ videos.filename) }}" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    {% endfor %}
{% endblock %}