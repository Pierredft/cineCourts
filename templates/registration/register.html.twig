{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
<div id="modalTest2">
	<div class="container">
		<h1 class="mt-4">S'inscrire</h1>
		<div>
			{{ form_errors(registrationForm) }}
		</div>
		<div class="mt-4">
			{{ form_start(registrationForm) }}

			{{ form_row(registrationForm.email, {'attr': {'class':'form-control'}}) }}

			{{ form_row(registrationForm.nom, {'attr': {'class':'form-control'}}) }}

			{{ form_row(registrationForm.prenom, {'attr': {'class':'form-control'}}) }}

			{{ form_row(registrationForm.telephone, {'attr': {'class':'form-control'}}) }}

			<label for="plainPassword" class="form-label">Mot de passe
			</label>
			{{ form_widget(registrationForm.plainPassword, {
            'attr': {'class':'form-control'} }) }}
		</div>

		<button type="submit" class="btn btn-primary mt-4">S'inscrire</button>
	</div>

	{{ form_end(registrationForm) }}
</div>
{% endblock %}
