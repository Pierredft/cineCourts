{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/password.css') }}">
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="divPass">
        <div class="form-container">
        <img class="pswdImg" src="{{ asset('images/miseEnPage/logoCineCourts.png') }}" alt="logo CineCourts" class="img-fluid">
            <h1 class="pswdTitle">Reinitialiser votre mot de passe</h1>

            <div class="msgPswd">
                <small>
                    Entrez votre adresse mail et vous recevrez un mail avec un lien pour reinitialiser votre mot de passe.
                </small>
            </div>
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {'label': false, 'attr': {'class': 'inputLog champs','placeholder': 'Votre adresse Ã©lectronique'}}) }}
            <hr>
            <button class="btn btnReg">Envoyer le lien par mail</button>
            {{ form_end(requestForm) }}
        </div>
        <div class="image-container">
            <img class="" src="{{ asset('images/miseEnPage/decorRegister.jpg') }}" alt="illustration" class="img-fluid">
        </div>
    </div>
{% endblock %}
