{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="mt-4">Se connecter</h2>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-dismissible alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="mt-4">
            <div>
                <div>
                    <label for="username" class="form-label">Email : </label>
                </div>
                <div>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ lastUsername }}">
                </div>
            </div>
            <div>
                <div>
                    <label for="password" class="form-label">Mot de passe : </label>
                </div>
                <div>
                    <input class="form-control" type="password" id="password" name="_password">
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
        </form>
    </div>
{% endblock %}